<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="1dp" android:topRightRadius="150dp"
                android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp"/>
            <solid android:color="@color/card_yellow"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="1dp" android:topRightRadius="150dp"
                android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp"/>
            <solid android:color="@color/card_yellow"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="1dp" android:topRightRadius="150dp"
                android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp"/>
            <solid android:color="@color/card_yellow"/>
        </shape>
    </item>
</selector>