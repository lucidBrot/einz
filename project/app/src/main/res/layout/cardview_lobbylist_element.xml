<?xml version="1.0" encoding="utf-8"?>
<!-- an element of the LobbyList in activity_lobby. Loaded dynamically -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/cv_lobbylist_element">
    <RelativeLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:id="@+id/tv_lobbylist_username"
                      android:text="Roger"
                      android:layout_margin="5dp"/>
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:id="@+id/tv_lobbylist_role"
                      android:text="Player"
                      android:layout_margin="5dp"/>
        </LinearLayout>
        <FrameLayout
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:foregroundGravity="center"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                android:id="@+id/fl_lobby_kick_frame">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="20dp"
                    app:srcCompat="@drawable/card_7_green"
                    android:id="@+id/btn_lobby_kick"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitCenter"/>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>