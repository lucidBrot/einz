<?xml version="1.0" encoding="utf-8"?>
<!-- an element of the LobbyList in activity_lobby. Loaded dynamically -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_playerpointlist_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/blue_default"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_global_rule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:drawableTint="@color/blue_darker"
            android:text="globalrule_1"
            android:textAlignment="center"
            android:textColor="@color/blue_darker" />

        <EditText
            android:id="@+id/et_global_rule_param"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight=".5"
            android:ems="10"
            android:hint="params"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/blue_darker"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v7.widget.CardView>