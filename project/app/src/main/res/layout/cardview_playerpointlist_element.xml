<?xml version="1.0" encoding="utf-8"?>
<!-- an element of the LobbyList in activity_lobby. Loaded dynamically -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_playerpointlist_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/red_default"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_weight=".5"
            android:gravity="center">

            <ImageView
                android:id="@+id/icn_role"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:tint="@color/red_darker"
                app:srcCompat="@drawable/ic_person_black_24dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_playerlist_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="none"
                android:text="Roger"
                android:textAlignment="center"
                android:textColor="@color/red_darker"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nr_of_points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/red_darker"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>